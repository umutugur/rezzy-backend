{
  "name": "rezvix-webpanel",
  "version": "1.3.1",
  "private": true,
  "type": "module",
  "description": "Rezvix Web Panel Desktop",
  "author": "Umut Ugur",
  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build",
    "electron:pack": "npm run electron:build && electron-builder --dir",
    "electron:dist": "npm run electron:build && electron-builder"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.51.1",
    "axios": "^1.7.7",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^9.0.3"
  },
  "build": {
  "appId": "com.umutugur.rezvix.desktop",
  "productName": "Rezvix",
  "files": ["dist/**", "electron/**", "package.json"],
  "mac": {
  "target": ["dmg", "zip"],
  "hardenedRuntime": true,
  "gatekeeperAssess": false,
  "entitlements": "electron/entitlements.mac.plist",
  "entitlementsInherit": "electron/entitlements.mac.inherit.plist"
},
  "win": { "target": "nsis" },
  "publish": [
    { "provider": "github", "owner": "umutugur", "repo": "rezzy-backend", "releaseType": "release" }
  ]
}
}